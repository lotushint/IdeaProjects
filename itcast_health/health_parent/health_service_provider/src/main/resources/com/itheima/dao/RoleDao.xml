<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//com.lotushint.mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.dao.RoleDao">
    <resultMap id="baseResultMap" type="com.itheima.pojo.Role">
        <id column="id" property="id"/>
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="keyword" property="keyword"/>
        <result column="description" property="description"/>
    </resultMap>
    <!-- 继承 baseResultMap -->
    <resultMap id="findByUserIdResultMap" type="com.itheima.pojo.Role" extends="baseResultMap">
        <!-- 多对多映射 -->
        <collection property="permissions" javaType="java.util.HashSet" ofType="com.itheima.pojo.Permission"
                    column="id" select="com.itheima.dao.PermissionDao.findByRoleId">
        </collection>
    </resultMap>

    <select id="findByUserId" parameterType="int" resultMap="findByUserIdResultMap">
        select r.*
        from t_role r,
             t_user_role ur
        where r.id = ur.role_id
          and ur.user_id = #{userId}
    </select>
</mapper>
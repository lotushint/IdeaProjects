<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="bookDao" class="com.lotushint.dao.impl.BookDaoImpl">
<!--        <constructor-arg type="int" value="10"/>-->
<!--        <constructor-arg type="java.lang.String" value="mysql"/>-->
        <constructor-arg index="1" value="mysql"/>
        <constructor-arg index="0" value="100"/>
    </bean>
    <bean id="userDao" class="com.lotushint.dao.impl.UserDaoImpl"/>

    <bean id="bookService" class="com.lotushint.service.impl.BookServiceImpl">
        <!-- 这种写法耦合度较高：如果修改构造方法参数名，则这里也要修改 推荐使用：type,index...-->
        <constructor-arg name="bookDao" ref="bookDao"/>
        <constructor-arg name="userDao" ref="userDao"/>
    </bean>
</beans>